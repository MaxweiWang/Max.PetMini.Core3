FROM mcr.microsoft.com/dotnet/core/aspnet:3.1
ARG ASPNETCORE_ACM_ALIYUN_NAMESPACE
ARG ASPNETCORE_ACM_ALIYUN_ACCESS_KEY
ARG ASPNETCORE_ACM_ALIYUN_SECRET_KEY
ARG ASPNETCORE_ENVIRONMENT
WORKDIR /app
COPY ./target /app
EXPOSE 5001
ENV ASPNETCORE_ENVIRONMENT $ASPNETCORE_ENVIRONMENT
ENV ASPNETCORE_URLS http://0.0.0.0:5001
ENV ASPNETCORE_ACM_ALIYUN_NAMESPACE $ASPNETCORE_ACM_ALIYUN_NAMESPACE
ENV ASPNETCORE_ACM_ALIYUN_ACCESS_KEY $ASPNETCORE_ACM_ALIYUN_ACCESS_KEY
ENV ASPNETCORE_ACM_ALIYUN_SECRET_KEY $ASPNETCORE_ACM_ALIYUN_SECRET_KEY
ENV ASPNETCORE_ACM_ALIYUN_DATA_ID ERP_Vendor
ENV ASPNETCORE_ACM_ALIYUN_GROUP ERP
CMD dotnet /app/Colipu.Vendor.WebAPI.dll